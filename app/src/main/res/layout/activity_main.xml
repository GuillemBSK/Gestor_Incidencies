<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="433dp"
        android:layout_height="788dp"
        android:background="#721BFF"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-20dp"
        tools:layout_editor_absoluteY="-2dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="163dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:fontFamily="sans-serif-condensed"
            android:text="GESTOR D'INCIDÈNCIES"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="46dp" />

        <Button
            android:id="@+id/main_nova_inci"
            android:layout_width="315dp"
            android:layout_height="60dp"
            android:layout_gravity="center|center_vertical"
            android:fontFamily="sans-serif-condensed"
            android:text="Nova incidència"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="3px" />

        <Button
            android:id="@+id/main_llista_inci"
            android:layout_width="315dp"
            android:layout_height="60dp"
            android:layout_gravity="center|center_vertical"
            android:fontFamily="sans-serif-condensed"
            android:onClick="btnView"
            android:text="Llista d'incidències"
            android:textSize="15dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="3px" />

        <Button
            android:id="@+id/main_inci_resoltes"
            android:layout_width="315dp"
            android:layout_height="60dp"
            android:layout_gravity="center|center_vertical"
            android:fontFamily="sans-serif-condensed"
            android:onClick="btnViewResoltes"
            android:text="Incidències resoltes"
            android:textSize="15dp"
            app:strokeColor="#FFFFFF"
            app:strokeWidth="3px" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>